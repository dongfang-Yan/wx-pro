
.header{
  padding: 40rpx 60rpx;
  background:#d8ebe4;
  position: sticky;
  top: 0;
  z-index: 1
}

.top{
  height: 140rpx;
}
.bottom{
  width: 100%;
  height: 80rpx;
}
.line{
  width: 2rpx;
  height: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -20rpx;
  background: #666;

}
.top-title{
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #666;
}
.top-total{
  font-size: 48rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-weight: bold;
}
.bottom{
  display: flex;
  position: relative;
}
.item-bottom{
  width: 50%;
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
}
.bottom-title{
  font-size: 28rpx;
  color: #666;
}
.bottom-text{
  margin-left: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.decimal{
  font-size: 28rpx;
}
.content{
  padding: 40rpx;
  line-height: 48rpx;
  position: relative;
}
.date-title{
  color: #666;
  font-size: 24rpx;
}
.date-item{
  margin-right: 20rpx;
}
.more{
  font-size: 36rpx;
  font-weight: bold;
  margin-top: -10rpx;
  position: relative
}
.wechat-picker{
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  z-index: 2;
}
.time{
  opacity: 0;
  margin-top: 40rpx;
}
.items{
  margin-top: 20rpx;
  padding: 0 40rpx;
}
.item{
  margin: 20rpx 0;
  border-bottom:1px solid #ccc; 
}
.item-icon{
  width: 80rpx;
  height: 80rpx;
}
.item-text{
  margin-left: 40rpx;
  font-size: 28rpx;
}
.huo{
  margin-top: 10rpx; 
}
.item-price{
  font-size: 28rpx;
  line-height: 100rpx;
  color: #86db49;
}
.item-in{
  font-size: 28rpx;
  line-height: 100rpx;
  color: #d74940;
}